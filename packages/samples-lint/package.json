{
    "private": true,
    "name": "lint-webos-sample",
    "version": "1.0.2",
    "main": "./src/index.js",
    "description": "Sample application that demostrates how to use the ilib-lint tool with python strings",
    "license": "Apache-2.0",
    "keywords": [
        "internationalization",
        "i18n",
        "localization",
        "l10n",
        "globalization",
        "g11n",
        "locale",
        "lint"
    ],
    "author": {
        "name": "Edwin Hoogerbeets",
        "web": "http://www.translationcircle.com/",
        "email": "edwin@translationcircle.com"
    },
    "contributors": [
        {
            "name": "Edwin Hoogerbeets",
            "email": "ehoogerbeets@gmail.com"
        },
        {
            "name": "Goun Lee",
            "email": "goun.lee@lge.com"
        }
    ],
    "engines": {
        "node": ">=16.11.0"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:iLib-js/ilib-mono-webos.git"
    },
    "scripts": {
        "lint": "ilib-lint -c ilib-lint-config.json -f html-formatter -o webos-result.html",
        "lint-json": "ilib-lint -c ilib-lint-config.json -f webos-json-formatter -o webos-result.json",
        "json-debug": "node --inspect-brk node_modules/ilib-lint/src/index.js -c ilib-lint-config.json -f webos-json-formatter -o webos-result.json",
        "lint-autofix": "ilib-lint -c ilib-lint-config.json -f html-formatter -o webos-result.html --fix --write",
        "debug": "node --inspect-brk node_modules/ilib-lint/src/index.js -c ilib-lint-config.json -f html-formatter -o webos-result.html --fix --write",
        "clean": "rm -rf webos-result.html webos-result.json",
        "test": "pnpm run lint; pnpm run lint-json; pnpm test:jest",
        "test:jest": "LANG=en_US.UTF8 node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test-debug": "node --experimental-vm-modules --inspect-brk node_modules/jest/bin/jest.js -i",
        "test-snapshot-update": "pnpm test:jest -u"
    },
    "dependencies": {
        "ilib-lint": "^2.19.1",
        "ilib-lint-webos": "workspace:*",
        "xml-js": "^1.6.11",
        "jest": "^30.2.0",
        "cheerio": "^1.1.2"
    }
}
