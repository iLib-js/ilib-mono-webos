 {
    "name": "webOS-lint",
    "sourceLocale": "en-KR",
    "locales": [],
    "plugins": [
        "ilib-lint-webos"
    ],
    "autofix": true,
    "rulesets": {
        "webos-translation-rules": {
            "resource-edge-whitespace": true,
            "resource-url-match": false,
            "resource-named-params": false,
            "resource-quote-style": false,
            "resource-unique-keys": false,
            "resource-completeness": false,
            "resource-no-fullwidth-latin": false,
            "resource-no-fullwidth-digits": false,
            "resource-no-fullwidth-punctuation-subset": false,
            "resource-no-space-between-double-and-single-byte-character": false,
            "resource-no-halfwidth-kana-characters": false,
            "resource-no-double-byte-space": false,
            "resource-no-space-with-fullwidth-punctuation": false
        }
    },
    "filetypes":{
        "xliff" : {
            "parsers": [
                "xliff"
            ],
            "serializer": "xliff",
            "ruleset": [ 
                "webos-translation-rules"
            ]
        }
    },
    "paths": {
        "**/[a-z][a-z]*-([A-Z][A-Z]).xliff": "xliff"
    }
}