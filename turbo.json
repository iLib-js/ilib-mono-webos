{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["lib/**"]
      },
      "coverage": {
        "dependsOn": ["build", "test", "^coverage"],
        "outputs": ["coverage/**", "coverage.txt", "junit.xml"]
      },
      "doc": {
        "dependsOn": ["^doc"],
        "outputs": ["docs/**"]
      },
      "test": {
        "dependsOn": ["build", "^test"]
      }
    }
  }